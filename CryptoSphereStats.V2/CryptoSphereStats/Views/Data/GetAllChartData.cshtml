@model IEnumerable<CryptoSphereStats.Domain.Models.ChartData>

@{
    ViewData["Title"] = "Data";
}

<h2>All Cryptocurrencies and Chart Data</h2>

<!-- Buttons for navigating to other actions -->
<div>
    <form method="get" asp-controller="Data" asp-action="GetAllCryptocurrencies">
        <button type="submit" class="btn btn-primary">View All Cryptocurrencies</button>
    </form>
    <form method="get" asp-controller="Data" asp-action="GetAllChartData">
        <button type="submit" class="btn btn-secondary">View All Chart Data</button>
    </form>
    <form method="get" asp-controller="Data" asp-action="GetAllData">
        <button type="submit" class="btn btn-success">View All Data (JSON)</button>
    </form>
</div>

<!-- Chart Data Table -->
<h3>Chart Data</h3>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Month</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Month</td>
                    <td>@item.Value</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No chart data available.</p>
}
